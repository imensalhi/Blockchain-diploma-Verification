{
  "name": "diploma_verif",
  "version": "1.0.0",
  "description": "Blockchain-based diploma verification system using Ethereum smart contracts",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:verbose": "npx hardhat test --verbose",
    "node": "npx hardhat node",
    "deploy:local": "npx hardhat ignition deploy ignition/modules/Deploy.js --network localhost",
    "deploy:sepolia": "npx hardhat ignition deploy ignition/modules/Deploy.js --network sepolia",
    "deploy:sepolia:auto": "node deploy-sepolia.js",
    "verify:deployment": "npx hardhat run scripts/verify-deployment.js --network localhost",
    "verify:sepolia": "npx hardhat run scripts/verify-deployment.js --network sepolia",
    "utils": "npx hardhat run scripts/utils.js --network localhost",
    "frontend:serve": "cd frontend && python -m http.server 8080",
    "frontend:serve:alt": "npx http-server frontend -p 8080 -c-1",
    "setup": "npm install",
    "dev:full": "concurrently \"npm run node\" \"timeout 10 && npm run deploy:local\" \"timeout 15 && npm run frontend:serve\"",
    "clean": "npx hardhat clean",
    "clean:all": "npx hardhat clean && rm -rf ignition/deployments/",
    "status": "echo 'ðŸ“Š Project Status: Production Ready âœ…' && npm test"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "diploma",
    "verification",
    "smart-contracts",
    "education",
    "certificate",
    "authentication",
    "hardhat",
    "solidity"
  ],
  "author": "Diploma Verification Team",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "hardhat": "^2.26.0"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sambett/Blockchain-diploma-Verification.git"
  },
  "bugs": {
    "url": "https://github.com/sambett/Blockchain-diploma-Verification/issues"
  },
  "homepage": "https://github.com/sambett/Blockchain-diploma-Verification#readme"
}
